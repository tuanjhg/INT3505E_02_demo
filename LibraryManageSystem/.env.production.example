# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!
# =============================================================================

# Application
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# API Configuration
API_VERSION=2.0.0
API_TITLE=Library Management API
API_DESCRIPTION=Production Library Management System API
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/library_db
# Example for cloud providers:
# DATABASE_URL=postgresql://user:pass@aws-rds-endpoint:5432/library_db

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0
# Example for Redis Cloud:
# REDIS_URL=redis://:password@redis-endpoint:6379

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-different-from-secret-key-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_DIR=logs

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE=redis://localhost:6379/1

# CORS (Comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Security
FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Gunicorn Workers (2-4 x CPU cores)
WORKERS=4
WORKER_CLASS=sync
WORKER_TIMEOUT=120

# Email (for alerts - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@yourdomain.com

# Monitoring & Alerting
SENTRY_DSN=  # Sentry.io for error tracking (optional)
PROMETHEUS_ENABLED=False

# Feature Flags
ENABLE_SWAGGER=False  # Disable Swagger in production for security
ENABLE_METRICS_ENDPOINT=True
ENABLE_DETAILED_HEALTH=False  # Only for admin access
